<!-- 这个用来显示 封装的tab组件 -->
<view>
   <Tabbar bindtitleChange="titleChange"
    currentIndex="{{currentIndex}}" titles="{{titles}}">
  <view wx:if="{{currentIndex===0}}">0</view>
  <view wx:elif="{{currentIndex===1}}">1</view>
  <view wx:else="{{currentIndex===2}}">2</view>
    
    
    


</Tabbar>
</view>
  